<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DateTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TimeTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">85sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="AppTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="NotificationHeadingTextStyle" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NotificationText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#E1E1E1</item>
    </style>

    <style name="StatusMenuText" parent="android:TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/notification_grey</item>
    </style>

    <style name="GeneralTextOne" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KeyPad" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#CDFFFFFF</item>
    </style>

    <style name="NotCategory" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/not_category_back</item>
    </style>

    <style name="NotManage" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/not_category_back</item>
    </style>

    <style name="scrollbar_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/thumb_shape</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
    </style>

    <style name="OnboardingHeading" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
