<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.activities.LockActivity">

    <LinearLayout
        android:id="@+id/dateLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DateTextStyle"
            android:text="@string/monday_1st_of_may"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/sun_icon"
            android:contentDescription="@string/weather_icon" />

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            style="@style/DateTextStyle"
            android:text="12Â°"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TimeTextStyle"
        android:layout_below="@id/dateLay"
        android:text="@string/_9_38"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvOtherDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monday_1st_of_may"
        android:textColor="@color/white"
        android:layout_below="@id/tvTime"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_moore_events"
        android:textColor="#80FFFFFF"
        android:layout_below="@id/tvOtherDate"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvSwipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        style="@style/GeneralTextOne"
        android:text="@string/swipe_up_to_unlock"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottomView"/>

    <View
        android:id="@+id/bottomView"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bottom_view_back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple"
        android:src="@drawable/camera" />

    <ImageView
        android:id="@+id/ivDialer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple"
        android:src="@drawable/dialer" />


</RelativeLayout>
